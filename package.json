{
  "name": "react-library-template",
  "version": "0.0.1",
  "description": "Template for ReactJs libraries",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "Adarsh Pastakia",
  "license": "MIT",
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/cli": "7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-docs": "^5.2.8",
    "@storybook/addon-info": "^5.2.8",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addon-options": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@storybook/theming": "^5.2.8",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.19",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.0",
    "node-sass": "^4.13.0",
    "prettier": "^1.19.1",
    "react-docgen-typescript-loader": "^3.6.0",
    "sass-loader": "^8.0.0",
    "stylelint": "^12.0.0",
    "stylelint-order": "^3.1.1",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.1.0",
    "tslint-webpack-plugin": "^2.1.0",
    "typescript": "^3.7.3"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "collectCoverage": true,
    "modulePaths": [
      "<rootDir>/modules/library",
      "<rootDir>/node_modules"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/__stories__/**/*",
      "!src/__tests__/**/*",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  },
  "scripts": {
    "start": "start-storybook -p 8001",
    "build": "build-storybook -o ./build",
    "pretest": "tslint -p ./",
    "test": "jest --ci --runInBand --verbose --detectOpenHandles",
    "build:clean": "rimraf ./dist",
    "build:babel": "babel src --out-dir dist --extensions '.ts','.tsx' --ignore './src/__stories__/','./src/__tests__/'",
    "build:typings": "tsc -p tsconfig.build.json --outDir dist",
    "bump-version": "npm --no-git-tag-version version",
    "dist": "npm run build:clean && npm run build:babel && npm run build:typings && npm run bump-version"
  }
}
